pipeline
{
  agent any

  stages
  {
   stage("scm checkout")
   {
     steps
     {
       git branch: 'master', url: 'https://github.com/bmashish/maven-project'
     }
   }
   stage("build stage")
   {
     steps
     {
     withMaven(jdk: 'jdk', maven: 'localmaven') 
     {
       sh 'mvn package'
     }
     }
   }
   stage('docker image creation')
   {
     steps
     {
     sh 'docker build -t ashikuma/mytomcat:0.0.1 .'
     }
   }
   stage('docker push image')
   {
     steps
     {
     withCredentials([string(credentialsId: 'mydocker', variable: 'mydocker')]) 
       {
         sh "docker login -u ashikuma -p $(mydocker)"
         sh 'docker push ashikuma/mytomcat:0.01'
         sh 'docker rmi ashikuma/mytomcat:0.01'
       }
     }
   }
  }
}
