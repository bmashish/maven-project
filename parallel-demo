pipeline{

        agent any
		
		         stages{
		
		                    stage('scm checkout'){
				                     steps{
							git 'https://github.com/bmashish/maven-project.git'
							}
							}
		
		          
				stage('parallel stage'){
	                           			parallel{			
							stage('compile'){
							    steps{
								withMave(jdk: 'localjdk', maven: 'localmaven')
								{
							    sh 'mvn compile'
							}
							}
							}
							
 				            stage('test'){
							
							    steps{
							    withMaven(jdk: 'localjdk', maven: 'localmaven')
								{
							    sh 'mvn test'
							}
							}
							}
							}
				  }
		
		}

failFast:true
}


