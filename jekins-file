pipeline
{
  agent any
  
  stages{
  
          stage('scm checkout')
		  
		  {
		    
		    steps{
			
			git branch: 'master', url: 'https://github.com/bmashish/maven-project.git'
			}       
		  
		  
		  
		  }
         stage('validate code')
		 {
		   steps{
		   withMaven(jdk: 'localjdk', maven: 'localmaven') 
		   {
           sh 'mvn validate'
           }
		   }
		 }
  }

}
