pipeline
{
  agent any
  
  stages{
  
          stage('scm checkout')
		  
		  {
		    
		    steps{
			
			branch : 'master,'git: "https://github.com/bmashish/maven-project.git"
			}       
		  
		  
		  
		  }
         stage('validate code')
		 {
		   steps{
		   withMaven(jdk: 'localjdk', maven: 'localmaven') 
		   {
           sh 'mvn validate'
           }
		   }
		 }
  }

}
